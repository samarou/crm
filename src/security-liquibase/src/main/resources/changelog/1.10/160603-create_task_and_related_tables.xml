<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="001" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="status" schemaName="${schema_name}"/></not></preConditions>
        <comment>creating the table status</comment>
        <createTable tableName="status" schemaName="${schema_name}">
            <column name="id" type="BIGINT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(250)"/>
        </createTable>
    </changeSet>

    <changeSet id="002" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="priority" schemaName="${schema_name}"/></not></preConditions>
        <comment>creating the table priority</comment>
        <createTable tableName="priority" schemaName="${schema_name}">
            <column name="id" type="BIGINT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(250)"/>
        </createTable>
    </changeSet>

    <changeSet id="003" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="task" schemaName="${schema_name}"/></not></preConditions>
        <comment>creating the table task</comment>
        <createTable tableName="task" schemaName="${schema_name}">
            <column autoIncrement="true" name="id" remarks="Identifier" type="BIGINT UNSIGNED">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)"/>
            <column name="start_date" type="DATETIME"/>
            <column name="end_date" type="DATETIME"/>
            <column name="assignee_id" type="BIGINT UNSIGNED"/>
            <column name="creator_id" type="BIGINT UNSIGNED"/>
            <column name="status_id" type="BIGINT UNSIGNED"/>
            <column name="priority_id" type="BIGINT UNSIGNED"/>
        </createTable>
    </changeSet>

    <changeSet id="004" author="yauheni.putsykovich">
        <comment>create foreign key constraint for assignee_id field</comment>
        <dropForeignKeyConstraint constraintName="fk_task__assignee_id__user_id" baseTableName="task"/>
                <addForeignKeyConstraint baseTableName="task" baseColumnNames="assignee_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="user" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task__assignee_id__user_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>
    <changeSet id="005" author="yauheni.putsykovich">
        <comment>create foreign key constraint for creator_id field</comment>
        <dropForeignKeyConstraint baseTableName="task" constraintName="fk_task__creator_id__user_id"/>
               <addForeignKeyConstraint baseTableName="task" baseColumnNames="creator_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="user" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task__creator_id__user_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>
    <changeSet id="006" author="yauheni.putsykovich">
        <comment>create foreign key constraint for status_id field</comment>
        <dropForeignKeyConstraint baseTableName="task" constraintName="fk_task__status_id__status_id" baseTableSchemaName="${schema_name}"/>
                <addForeignKeyConstraint baseTableName="task" baseColumnNames="status_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="status" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task__status_id__status_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>
    <changeSet id="007" author="yauheni.putsykovich">
        <comment>create foreign key constraint for priority_id field</comment>
        <dropForeignKeyConstraint baseTableName="task" constraintName="fk_task__priority_id__priority_id" baseTableSchemaName="${schema_name}"/>
           <addForeignKeyConstraint baseTableName="task" baseColumnNames="priority_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="priority" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task__priority_id__priority_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="008" author="yauheni.putsykovich">
        <sql dbms="mysql">
            insert into `security_sample`.`status` (id, name, description) values
            (1, 'New', 'Status New'),
            (2, 'In Progress', 'Status In Progress'),
            (3, 'Resolved', 'Status Resolved'),
            (4, 'Closed', 'Status Closed')
            on duplicate key update `id` = `id`;
        </sql>
    </changeSet>

    <changeSet id="09" author="yauheni.putsykovich">
        <sql dbms="mysql">
            insert into `security_sample`.`priority` (id, name, description) values
            (1, 'Low', 'Priority Low'),
            (2, 'Normal', 'Priority Normal'),
            (3, 'High', 'Priority High')
            on duplicate key update `id` = `id`;
        </sql>
    </changeSet>

    <!-- task_company table -->

    <changeSet id="010" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="task_company" schemaName="${schema_name}"/></not></preConditions>
               <createTable tableName="task_company" schemaName="${schema_name}">
            <column name="task_id" type="BIGINT UNSIGNED"/>
            <column name="company_id" type="BIGINT UNSIGNED"/>
        </createTable>
    </changeSet>

    <changeSet id="011" author="yauheni.putsykovich">

        <preConditions onFail="MARK_RAN"><not><primaryKeyExists tableName="task_company" schemaName="${schema_name}"/></not></preConditions>
                <addPrimaryKey tableName="task_company" columnNames="task_id, company_id" constraintName="pk_task_company" schemaName="${schema_name}"/>

    </changeSet>

    <changeSet id="012" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><foreignKeyConstraintExists foreignKeyName="fk_task_company__task_id__task_id" schemaName="${schema_name}"/></not></preConditions>
                <addForeignKeyConstraint baseTableName="task_company" baseColumnNames="task_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="task" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task_company__task_id__task_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="013" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><foreignKeyConstraintExists foreignKeyName="fk_task_company__company_id__company_id" schemaName="${schema_name}"/></not></preConditions>
               <addForeignKeyConstraint baseTableName="task_company" baseColumnNames="company_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="company" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task_company__company_id__company_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

    <!-- task_contact table -->

    <changeSet id="014" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><tableExists tableName="task_contact" schemaName="${schema_name}"/></not></preConditions>
                <createTable tableName="task_contact" schemaName="${schema_name}">
            <column name="task_id" type="BIGINT UNSIGNED"/>
            <column name="contact_id" type="BIGINT UNSIGNED"/>
        </createTable>
    </changeSet>

    <changeSet id="015" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><primaryKeyExists tableName="task_contact" schemaName="${schema_name}"/></not></preConditions>
               <addPrimaryKey tableName="task_contact" columnNames="task_id, contact_id" constraintName="pk_task_contact" schemaName="${schema_name}"/>
    </changeSet>

    <changeSet id="016" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><foreignKeyConstraintExists foreignKeyName="fk_task_contact__task_id__task_id" schemaName="${schema_name}"/></not></preConditions>
                <addForeignKeyConstraint baseTableName="task_contact" baseColumnNames="task_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="task" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task_contact__task_id__task_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

    <changeSet id="017" author="yauheni.putsykovich">
        <preConditions onFail="MARK_RAN"><not><foreignKeyConstraintExists foreignKeyName="fk_task_contact__contact_id__contact_id" schemaName="${schema_name}"/></not></preConditions>
                <addForeignKeyConstraint baseTableName="task_contact" baseColumnNames="contact_id" baseTableSchemaName="${schema_name}"
                                         referencedTableName="contact" referencedColumnNames="id" referencedTableSchemaName="${schema_name}"
                                 constraintName="fk_task_contact__contact_id__contact_id" onDelete="NO ACTION" onUpdate="NO ACTION"/>
    </changeSet>

</databaseChangeLog>
