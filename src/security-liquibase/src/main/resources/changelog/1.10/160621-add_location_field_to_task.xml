<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="001" author="yauheni.putsykovich">
                <preConditions onFail="MARK_RAN"><not><columnExists tableName="task" columnName="location" schemaName="${schema_name}"/></not></preConditions>
        <addColumn tableName="task" schemaName="${schema_name}">
            <column name="location" type="varchar(500)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
