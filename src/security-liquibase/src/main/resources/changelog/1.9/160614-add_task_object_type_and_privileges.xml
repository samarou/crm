<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="001" author="yauheni.putsykovich">
        <comment>Add new object type 'sample.Task'</comment>
        <insert tableName="object_type">
            <column name="id" value="4"/>
            <column name="name" value="sample.Task"/>
        </insert>
    </changeSet>

    <changeSet id="002" author="yauheni.putsykovich">
        <comment>Add privileges on task entity</comment>
        <insert tableName="privilege">
            <column name="id" value="13"/>
            <column name="object_type_id" value="4"/>
            <column name="action_id" value="1"/>
        </insert>
        <insert tableName="privilege">
            <column name="id" value="14"/>
            <column name="object_type_id" value="4"/>
            <column name="action_id" value="2"/>
        </insert>
        <insert tableName="privilege">
            <column name="id" value="15"/>
            <column name="object_type_id" value="4"/>
            <column name="action_id" value="3"/>
        </insert>
        <insert tableName="privilege">
            <column name="id" value="16"/>
            <column name="object_type_id" value="4"/>
            <column name="action_id" value="4"/>
        </insert>
    </changeSet>

    <changeSet id="003" author="yauheni.putsykovich">
        <comment>Assign privileges to manager</comment>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="3"/>
            <column name="privilege_id" valueNumeric="13"/>
        </insert>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="3"/>
            <column name="privilege_id" valueNumeric="14"/>
        </insert>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="3"/>
            <column name="privilege_id" valueNumeric="15"/>
        </insert>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="3"/>
            <column name="privilege_id" valueNumeric="16"/>
        </insert>
    </changeSet>

    <changeSet id="004" author="yauheni.putsykovich">
        <comment>Assign privileges to specialist</comment>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="4"/>
            <column name="privilege_id" valueNumeric="13"/>
        </insert>
        <insert tableName="role_privilege">
            <column name="role_id" valueNumeric="4"/>
            <column name="privilege_id" valueNumeric="14"/>
        </insert>
    </changeSet>

</databaseChangeLog>
